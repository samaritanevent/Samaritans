@model List<EventListModel>
@{
    ViewBag.Title = "Index";
}

<h2>Your Events</h2>

<div>
    @Html.ActionLink("Create New Event", "Create", "Event")
</div>

<div class="panel">
    <div class="panel-heading">
        <h4 class="panel-title">
            Your Upcoming Events
        </h4>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group row">
                <div class="col-md-12">
                    <div id="calendar"></div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    @if(Model != null && Model.Any())
                    {
                        <table id="EventList">
                        <thead>
                            <tr>
                                <th>
                                    Event Name
                                </th>
                                <th>
                                    Purpose of Event
                                </th>
                                <th>
                                    Event Date
                                </th>
                                <th>
                                    Min Attendance
                                </th>
                                <th>
                                    Max Attendance
                                </th>
                                <th>
                                    Distance
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.DisplayFor(x => x)
                        </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function ()
    {
        $("#calendar").fullCalendar({
            events: function (start, end, timezone, callback)
            {
                $.ajax({
                    url: "/ProjectCalendar/GetEvents",
                    dataType: "json",
                    data: {
                        startDate: start.toISOString(),
                        endDate: end.toISOString()
                    },
                    success: function (data)
                    {
                        callback(data);
                    }
                });
            }
        });
    });


</script>