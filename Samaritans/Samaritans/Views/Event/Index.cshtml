@model List<EventListModel>
@{
    ViewBag.Title = "Index";
}

<h2>Your Events</h2>
<div class="panel">
    <div class="panel-heading">
        <h4 class="panel-title">
        </h4>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group row">
                <div class="col-md-12">
                    @if(Model != null && Model.Any())
                    {
                        <table id="EventList" class="table table-striped table-hover" style="cursor:pointer">
                        <thead>
                            <tr>
                                
                                <th>
                                    Event Name
                                </th>
                                <th>
                                    Purpose of Event
                                </th>
                                <th>
                                    Event Date
                                </th>
                                <th>
                                    Min Attendance
                                </th>
                                <th>
                                    Max Attendance
                                </th>
                                <th>
                                    Distance
                                </th>
                                <th>
                                    
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.DisplayFor(x => x)
                        </tbody>
                        </table>
                    }
                    @if (Model == null || !Model.Any())
                    {
                        <div class="text-center"> You haven't signed up for anything yet.<i class="fa-frown-o"></i></div>
                    }
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/events")
}