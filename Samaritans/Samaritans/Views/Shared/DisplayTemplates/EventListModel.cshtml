@model EventListModel
    

<tr class="@(Model.IsOrganizing ? "organizing" : "")">
    <td>
        @Html.DisplayFor(x => x.Name)
    </td>
    <td>
        @Html.DisplayFor(x => x.Purpose)
    </td>
    <td>
        @Html.DisplayFor(x => x.EventDateDisplay)
    </td>
    <td>
        @Html.DisplayFor(x => x.MinAttendance) Attendees
    </td>
    <td>
        @Html.DisplayFor(x => x.MaxAttendance) Attendees
    </td>
    <td>
        @Html.DisplayFor(x => x.DistanceFromUser) mi.
    </td>
</tr>
